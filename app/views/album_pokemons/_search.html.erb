<%= form_with(method: :get) do %>
  <div class="form-group" >
    <%= label_tag :pokemon_id, "Nom Pokemon ou son ID" %>
    <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Evoli / pop3-13" %>
  </div>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div>
  <% @seasons.each do |season| %>
    <%= link_to season.season_name, request.params.merge(season_id: season.id) %>
  <% end %>
  <% unless @extensions.nil? %>
    <% @extensions.each do |extension| %>
      <%= link_to extension.extension_name, request.params.merge(extension_id: extension.id) %>
    <% end %>
  <% end %>
</div>
