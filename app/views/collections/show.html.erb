<h1><%= @collection.name %></h1>

<%= link_to 'Edit Collection', edit_collection_path(@collection), class: 'btn btn-primary' %>
<%# <%= link_to 'Delete Collection', collection_path(@collection), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> %>

<h2>Albums</h2>
<% @collection.albums.each do |album| %>
  <div class="album">
    <h3><%= link_to album.name, album_path(album) %></h3>
    <%= link_to 'Edit',  edit_album_path(album) %>
    <%# <%= link_to 'Delete', collection_album_path(@collection, album), method: :delete, data: { confirm: 'Are you sure?' } %> %>
  </div>
<% end %>

<%= link_to 'Add New Album', new_collection_album_path(@collection), class: 'btn btn-success' %>
<%= link_to 'Back to Collections', collections_path, class: 'btn btn-secondary' %>
