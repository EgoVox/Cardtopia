<div class="edit-album-container">
  <div class="edit-album-bloc">
    <div class="ms-2">
      <h1 style="font-size: 40px;">Editer l'album</h1>
    </div>

    <%= form_with(model: @album, url: album_path(@album), method: :patch) do |form| %>
      <div class="ms-2 my-4 fs-5">
        <%= form.label :titre %>
        <%= form.text_field :name %>
      </div>

    <div class="my-3 ms-2 d-flex edit-button">
        <%= form.submit "Mettre à jour", class: 'btn', style: "color: #fbfcfa; background: #1e3d59; border-radius: 8px; border: 1px; border-color: $blanc-creme; border-style: solid; cursor: pointer; margin-right: 10px;" %>
      <% end %>
      <%= link_to 'Retour à l\'album', album_path(@album), class: 'btn btn-secondary', style: "color: #fbfcfa; background: #1e3d59; border-radius: 8px; border: 1px; border-color: $blanc-creme; border-style: solid; cursor: pointer; margin-right: 10px;" %>
    </div>
  </div>
</div>
